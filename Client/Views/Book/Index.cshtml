@{
    ViewData["Title"] = "Book";
}
<head>
    <link rel="stylesheet" href="~/css/book.css" />
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-header">
            <div class="search-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" placeholder="Search" class="search-input">
            </div>
            <div class="user-controls">
                <div class="notification-badge">
                    <i class="far fa-envelope"></i>
                    <span class="badge">1</span>
                </div>
                <div class="notification-icon">
                    <i class="far fa-bell"></i>
                </div>
                <div class="user-profile">
                    <img src="https://randomuser.me/api/portraits/women/44.jpg" alt="User Profile" class="profile-image">
                    <div class="user-info">
                        <div class="user-name">Jane Cooper</div>
                        <div class="user-email">jane234@example.com</div>
                    </div>
                    <i class="fas fa-chevron-down dropdown-icon"></i>
                </div>
            </div>
        </div>

        <div class="dashboard-content">
            <div class="content-header">
                <h1>Books</h1>
                <div class="content-controls">
                    <button class="add-product-button" onclick="addNewBook()">
                        <i class="fas fa-plus"></i>
                        Add New Book
                    </button>
                </div>
            </div>

            <div class="product-table">
                <div class="table-header">
                    <div class="header-cell">Title <i class="fas fa-sort"></i></div>
                    <div class="header-cell">Author <i class="fas fa-sort"></i></div>
                    <div class="header-cell">Price <i class="fas fa-sort"></i></div>
                    <div class="header-cell">Stock <i class="fas fa-sort"></i></div>
                    <div class="header-cell">Genre <i class="fas fa-sort"></i></div>
                    <div class="header-cell">Action</div>
                </div>
                <div class="table-body" id="book-table-body">
                    <!-- Data will be inserted here dynamically -->
                </div>
            </div>
        </div>
    </div>

    <script>
        async function fetchBooks() {
            const response = await fetch('https://localhost:7079/odata/Books');
            const data = await response.json();
            const tableBody = document.getElementById('book-table-body');
            tableBody.innerHTML = '';

            data.value.forEach(book => {
                const row = `<div class='table-row'>
                    <div class='cell'>${book.Title}</div>
                    <div class='cell'>${book.Author}</div>
                    <div class='cell'>$${book.Price.toFixed(2)}</div>
                    <div class='cell'>${book.Stock} pcs</div>
                    <div class='cell'>${book.Genre}</div>
                    <div class='cell'><button class='action-button'><i class='fas fa-ellipsis-h'></i></button></div>
                </div>`;
                tableBody.innerHTML += row;
            });
        }
        
        document.addEventListener('DOMContentLoaded', fetchBooks);
    </script>
</body>