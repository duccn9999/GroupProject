@{
    ViewData["Title"] = "Create Role";
}

<head>
    <link rel="stylesheet" href="~/css/book.css" />
    <link rel="stylesheet" href="~/css/create.css" />
</head>
<body>
    <div class="create-book-container">
        <h1>Add New Role</h1>

        <form id="create-book-form" method="post" onsubmit="return submitForm(event)">
            <div class="form-group">
                <label for="title">Role Name</label>
                <input type="text" id="roleName" name="roleName" required />
            </div>


            <button type="submit" class="submit-button">Add Role</button>
            <a href="@Url.Action("Index", "Role")" class="cancel-button">Cancel</a>
        </form>
    </div>

    <script>
        token = sessionStorage.getItem('token'); // Assuming you store the token in localStorage
        async function submitForm(event) {
            event.preventDefault(); // Prevent the default form submission
            
            const formData = new FormData(event.target);
            const data = {
                roleName: formData.get('roleName'),
            };

            const response = await fetch('https://localhost:7079/odata/Roles', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${token}` // Include the token in the Authorization header
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                alert('Role added successfully!');
                window.location.href = '@Url.Action("Index", "Role")'; // Redirect to the roles list
            } else {
                alert('Error adding role. Please try again.');
            }
        }

    </script>
</body>