@{
    ViewData["Title"] = "Users";
}
<head>
    <link rel="stylesheet" href="~/css/book.css" />
</head>
<body>
    
    <div class="dashboard-content">
        <div class="content-header">
            <h1>Users</h1>
            <div class="content-controls">
                <button class="add-button">
                    <i class="fas fa-plus"></i>
                    Add New User
                </button>
            </div>
        </div>

        <div class="list-table">
            <div class="table-header">
                <div class="header-cell">User ID</div>
                <div class="header-cell">User Name</div>
                <div class="header-cell">Actions</div>
            </div>
            <div class="table-body" id="user-table-body">
                <!-- Data will be inserted here dynamically -->
            </div>
        </div>
    </div>


    <script>
        async function fetchUsers() {
            const response = await fetch('https://localhost:7079/odata/Users');
            const data = await response.json();
            const tableBody = document.getElementById('user-table-body');
            tableBody.innerHTML = '';
            console.log(data);

            data.forEach(user => {
                console.log(user.UserId);
                const row = `<div class='table-row'>
                    <div class='cell'>${user.UserId}</div>
                    <div class='cell'>${user.UserName}</div>
                    <div class='cell'>
                        <a href="#" class='edit-button' onclick='editUser("${user.UserId}", "${user.UserName}")'>Edit</a>
                        <a href="#" class='delete-button' onclick='deleteUser("${user.UserId}")'>Delete</a>
                    </div>
                </div>`;
                tableBody.innerHTML += row;
            });
        }

        document.addEventListener('DOMContentLoaded', fetchUsers);
    </script>
</body>
